
@{
    ViewBag.Title = "Domain.com.au Code Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Property Matcher Test Page</h2>
<hr />
<div ng-controller="matcherController">
    <div class="row">
        <div class="col-md-6">
            <h4>Database property</h4>
            <div>
                <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" class="form-control" placeholder="Name" ng-model="databaseProperty.Name">
                </div>
                <div class="form-group">
                    <label for="">Address</label>
                    <input type="text" class="form-control" placeholder="Address" ng-model="databaseProperty.Address">
                </div>
                <div class="form-group">
                    <label for="">Agency Code</label>
                    <input type="text" class="form-control" placeholder="Agency Code" ng-model="databaseProperty.AgencyCode">
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="">Latitude</label>
                            <input type="text" class="form-control" placeholder="Latitude" ng-model="databaseProperty.Latitude">
                        </div>
                        <div class="col-md-6">
                            <label for="">Longitude</label>
                            <input type="text" class="form-control" placeholder="Longitude" ng-model="databaseProperty.Longitude">
                        </div>
                    </div>               
                </div>
                <div>
                    <ui-gmap-google-map center='databaseProperty.map.center' zoom='databaseProperty.map.zoom'>
                        <ui-gmap-marker coords='databaseProperty.marker.coords' idkey='databaseProperty.marker.id' options='databaseProperty.marker.options' events='databaseProperty.marker.events'>
                        </ui-gmap-marker>
                    </ui-gmap-google-map>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h4>Agency property</h4>
            <div>
                <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" class="form-control" placeholder="Name" ng-model="agencyProperty.Name">
                </div>
                <div class="form-group">
                    <label for="">Address</label>
                    <input type="text" class="form-control" placeholder="Address" ng-model="agencyProperty.Address">
                </div>
                <div class="form-group">
                    <label for="">Agency Code</label>
                    <input type="text" class="form-control" placeholder="Agency Code" ng-model="agencyProperty.AgencyCode">
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="">Latitude</label>
                            <input type="text" class="form-control" placeholder="Latitude" ng-model="agencyProperty.Latitude">
                        </div>
                        <div class="col-md-6">
                            <label for="">Longitude</label>
                            <input type="text" class="form-control" placeholder="Longitude" ng-model="agencyProperty.Longitude">
                        </div>
                    </div>
                </div>
                <div>
                    <ui-gmap-google-map center='agencyProperty.map.center' zoom='agencyProperty.map.zoom'>
                        <ui-gmap-marker coords='agencyProperty.marker.coords' idkey='agencyProperty.marker.id' options='agencyProperty.marker.options' events='agencyProperty.marker.events'>
                        </ui-gmap-marker>
                    </ui-gmap-google-map>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="form-inline">
                <label for="">Provider</label>
                <select class="form-control" ng-model="provider">
                    <option value="OTBRE">Only The Best Real Estate!</option>
                    <option value="LRE">Location Real Estate</option>
                    <option value="CRE">Contrary Real Estate</option>
                </select>
                <button type="button" class="btn btn-primary" ng-click="compere()">Compare</button>
            </div>
        </div>
        <div class="col-md-6">
            <h2 style="height:30px">
                <span class="label label-success" ng-show="init && isMatch">Yea, Match!!!!</span>
                <span class="label label-danger" ng-show="init && !isMatch">Ups doesn't Match</span>
            </h2>
        </div>
    </div>
</div>
@section styles {
    <style>
        .angular-google-map-container {
            height: 200px;
        }
    </style>
}